{
  "version": 3,
  "cmakeMinimumRequired": {"major": 3, "minor": 21, "patch": 0},
  "configurePresets": [
    {
      "name": ".base",
      "description": "Preset for GH200 nodes in N8 CIR Bede (UK Tier 2 HPC), including psABI suppression. -mcpu=neoverse-v2 requires gcc 12.3+, so using native.",
      "hidden": true,
      "inherits": ["full"],
      "binaryDir": "${sourceDir}/build-${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_SHARED_LIBS":     {"type": "BOOL", "value": "ON"},
        "CELERITAS_BUILD_DOCS": {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_OpenMP":  {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_Geant4":  {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_HepMC3":  {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_CUDA":  {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_HIP":  {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_JSON":    {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_MPI":    {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_ROOT":    {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_SWIG":    {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_VecGeom": {"type": "BOOL", "value": "ON"},
        "CMAKE_CUDA_ARCHITECTURES": {"type": "STRING", "value": "90"},
        "CMAKE_CXX_STANDARD": {"type": "STRING", "value": "17"},
        "CMAKE_CXX_EXTENSIONS": {"type": "BOOL", "value": "OFF"},
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install-${presetName}",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG -mcpu=native",
        "CMAKE_CUDA_FLAGS_RELEASE": "-O3 -DNDEBIG -lineinfo -Xcompiler -mcpu=naqtive",
        "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-O2 -g -DNDEBUG -mcpu=native",
        "CMAKE_CUDA_FLAGS_RELWITHDEBINFO": "-O2 -g -DNDEBUG -lineinfo -Xcompiler -mcpu=native",
        "CMAKE_EXPORT_COMPILE_COMMANDS": {"type": "BOOL", "value": "ON"},
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wno-psabi",
        "CMAKE_CUDA_FLAGS": "-Xcompiler -Wno-psabi"
      }
    },
    {
      "name": ".gpu-debug",
      "hidden": true,
      "description": "Enable GPU debug mode (mutually exclusive with -lineinfo)",
      "cacheVariables": {
        "BUILD_SHARED_LIBS":{"type": "BOOL", "value": "ON"},
        "CELERITAS_DEBUG":      {"type": "BOOL",   "value": "ON"},
        "CMAKE_BUILD_TYPE":     {"type": "STRING", "value": "Debug"},
        "CMAKE_CUDA_FLAGS_DEBUG": "-G"
      }
    },
    {
      "name": ".ndebug-lineinfo",
      "hidden": true,
      "description": ".ndebug but with lineinfo too. CMake Preset inherits do not support cache appending",
      "cacheVariables": {
        "CELERITAS_DEBUG":  {"type": "BOOL",   "value": "OFF"},
        "CMAKE_BUILD_TYPE": {"type": "STRING", "value": "Release"},
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG -mcpu=native",
        "CMAKE_CUDA_FLAGS_RELEASE": "-O3 -DNDEBIG -lineinfo -Xcompiler -mcpu=native",
        "CMAKE_HIP_FLAGS_RELEASE": "-O3 -DNDEBUG"
      }
    },
    {
      "name": "base",
      "displayName": "Bede GH200 default options (GCC, debug)",
      "inherits": [".base"],
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "base-novg",
      "displayName": "Bede GH200 default options (GCC, debug)",
      "inherits": [".debug", ".base"],
      "binaryDir": "${sourceDir}/build-novg",
      "cacheVariables": {
        "CELERITAS_USE_VecGeom": {"type": "BOOL", "value": "OFF"}
      }
    },
    {
      "name": "reldeb-novg",
      "displayName": "Bede GH200 release mode",
      "inherits": [".reldeb", ".base"],
      "cacheVariables": {
        "CELERITAS_USE_VecGeom": {"type": "BOOL", "value": "OFF"}
      }
    },
    {
      "name": "reldeb",
      "displayName": "Bede GH200 release mode",
      "inherits": [".reldeb", ".base"]
    },
    {
      "name": "ndebug-novg",
      "displayName": "Bede GH200 release mode",
      "inherits": [".ndebug-lineinfo", ".base"],
      "cacheVariables": {
        "BUILD_SHARED_LIBS":{"type": "BOOL",   "value": "ON"},
        "CELERITAS_USE_VecGeom": {"type": "BOOL", "value": "OFF"}
      }
    },
    {
      "name": "ndebug",
      "displayName": "Bede GH200 release mode",
      "inherits": [".ndebug-lineinfo", ".base"],
      "cacheVariables": {
        "BUILD_SHARED_LIBS":{"type": "BOOL",   "value": "ON"}
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "configurePreset": "base",
      "jobs": 8,
      "nativeToolOptions": ["-k0"]
    },
    {"name": "base-novg", "configurePreset": "base-novg", "inherits": "base"},
    {"name": "ndebug", "configurePreset": "ndebug", "inherits": "base"},
    {"name": "ndebug-novg", "configurePreset": "ndebug-novg", "inherits": "base"},
    {"name": "reldeb", "configurePreset": "reldeb", "inherits": "base"},
    {"name": "reldeb-novg", "configurePreset": "reldeb-novg", "inherits": "base"}
  ],
  "testPresets": [
    {
      "name": "base",
      "configurePreset": "base",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": false, "jobs": 8}
    },
    {"name": "base-novg", "configurePreset": "base-novg", "inherits": "base"},
    {"name": "ndebug", "configurePreset": "ndebug", "inherits": "base"},
    {"name": "ndebug-novg", "configurePreset": "ndebug-novg", "inherits": "base"},
    {"name": "reldeb", "configurePreset": "reldeb", "inherits": "base"},
    {"name": "reldeb-novg", "configurePreset": "reldeb-novg", "inherits": "base"}
  ]
}




